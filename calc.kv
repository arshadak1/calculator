<Button>:
    bold: True
    theme_text_color: "Custom"
    specific_text_color: (0, 0, 0, 1)
    background_normal: ''
    background_color: (55/255,180/255,180/255,1)
    font_size: 25

MDBoxLayout:
    orientation: 'vertical'
    MDToolbar:
        title: 'Calculator'
        bold: True
        size_hint_y: 0.17
        md_bg_color: (1/255,180/255,180/255,1)
    TextInput:
        id: input_box
        background_normal: ""
        background_color: (1, 1, 1, 0)
        text: ''
        bold: True
        disabled: True
        size_hint: (1, 0.6)
        halign: "right"
        valign: "top"
        specific_text_color: (0, 0, 0, 1)
        font_size: 30
    GridLayout:
        cols: 4
        rows: 5

        # rows
        Button:
            text: 'CE'
            bold: False
            background_color: (150/255,150/255,150/255,1)
            on_release: app.clear_entry()
        Button:
            text: 'C'
            bold: False
            background_color: (150/255,150/255,150/255,1)
            on_release: app.clear()
        Button:
            text: '%'
            bold: False
            background_color: (150/255,150/255,150/255,1)
            on_release: app.button(self.text)
        Button:
            text: '/'
            bold: False
            background_color: (150/255,150/255,150/255,1)
            on_release: app.button(self.text)

        # rows
        Button:
            text: '7'
            on_release: app.button(self.text)
        Button:
            text: '8'
            on_release: app.button(self.text)
        Button:
            text: '9'
            on_release: app.button(self.text)
        Button:
            text: 'x'
            background_color: (150/255,150/255,150/255,1)
            bold: False
            on_release: app.button(self.text)

        # rows
        Button:
            text: '4'
            on_release: app.button(self.text)
        Button:
            text: '5'
            on_release: app.button(self.text)
        Button:
            text: '6'
            on_release: app.button(self.text)
        Button:
            text: '-'
            background_color: (150/255,150/255,150/255,1)
            bold: False
            on_release: app.button(self.text)

        # rows
        Button:
            text: '1'
            on_release: app.button(self.text)
        Button:
            text: '2'
            on_release: app.button(self.text)
        Button:
            text: '3'
            on_release: app.button(self.text)
        Button:
            text: '+'
            background_color: (150/255,150/255,150/255,1)
            bold: False
            on_release: app.button(self.text)

        # rows
        Button:
            text: '00'
            on_release: app.button(self.text)
        Button:
            text: '0'
            on_release: app.button(self.text)
        Button:
            text: '.'
            on_release: app.button(self.text)
        Button:
            text: '='
            background_color: (150/255,150/255,150/255,1)
            bold: False
            on_release: app.result()


